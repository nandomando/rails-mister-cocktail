

<div class="banner">
  <h1>Our Cocktails</h1>
</div>

<div class="btn-add">
  <%=link_to '+ Add new cocktail', new_cocktail_path%>
</div>

<div class="grid-container">
  <%@cocktails.each do |cocktail|%>
    <div class="carte">
      <img src="<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill unless cocktail.photo.blank? %>" class="card_img_top" >
      <h5 class="card-title"><%= cocktail.name%></h5>
      <%cocktail.ingredients.each do |ingredient| %>
        <p class="card-text"><%= ingredient.name%></p>
        <%cocktail.doses.each do |dose| %>
          <p><%= dose.description%></p>
          <%=link_to 'Delete', cocktail, method: :delete, data: { confirm: "Are you sure you want to delete this item?"}%>
          <%=link_to 'Edit', edit_cocktail_path(cocktail)%>
        <%end%>
      <%end%>
  </div>
  <%end%>
</div>
</div>


